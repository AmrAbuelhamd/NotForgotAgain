<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.blogspot.soyamr.notforgotagain.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_signInFragment_to_notesBoardFragment"
            app:destination="@id/notesBoardFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />

        <!--
                -popUpTo-
        LIDIA here i am finishing all the  previous fragments and
         removing them from stack, so that pressing back will not take me
         back to log or sign in screens
        -->
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.blogspot.soyamr.notforgotagain.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/signUpFragment"/>
    </fragment>
    <fragment
        android:id="@+id/notesBoardFragment"
        android:name="com.blogspot.soyamr.notforgotagain.NotesBoardFragment"
        android:label="fragment_notes_board"
        tools:layout="@layout/fragment_notes_board">
        <action
            android:id="@+id/action_notesBoardFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.blogspot.soyamr.notforgotagain.AddNoteFragment"
        android:label="fragment_add_note"
        tools:layout="@layout/fragment_add_note">
        <action
            android:id="@+id/action_addNoteFragment_to_notesBoardFragment"
            app:destination="@id/notesBoardFragment" />
    </fragment>
</navigation>